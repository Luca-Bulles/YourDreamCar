@model YourDreamCar.Models.LoginViewModel

@{
    ViewData["Title"] = "Index";
}

<head>
    <!-- Scalen met veschillende grootte schermen-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<form class="box" action="#" method="post">
    <h1>Login</h1>
    <div class="form-group">
        <input type="text" asp-for="Email" class="form-control" placeholder="Email" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="password" asp-for="Password" class="form-control" placeholder="Wachtwoord" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="text-white">
        Nog geen account? <a asp-area="" asp-action="CreateUser" asp-controller="Account">Registreer</a>
    </div>
    <input type="submit" name="" value="Login">
</form>

